<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".HelpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp">

        <!-- Page title -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/archivo_black"
            android:text="@string/help2"
            android:textAlignment="center"
            android:textColor="#222222"
            android:textSize="34sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Scrollable content -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <!-- Section: How to use the app -->
                <TextView
                    android:id="@+id/textView15"
                    style="@style/HelpSectionHeader"
                    android:text="@string/how_to_use_the_app" />

                <TextView
                    android:id="@+id/textView16"
                    style="@style/HelpBody"
                    android:layout_marginTop="8dp"
                    android:text="@string/to_use_the_app_fill_out_all_information_on_the_profile_page_and_click_save_next_navigate_to_the_interaction_checker_page_where_you_should_see_your_health_factors_already_populated_enter_in_the_comparison_drug_you_would_like_to_check_the_interaction_severity_against_either_by_using_the_text_entry_or_through_scanning_it_s_barcode_by_clicking_the_barcode_scanner_button_to_the_right_of_the_text_entry" />

                <!-- Section: Questions & Answers -->
                <TextView
                    android:id="@+id/textView17"
                    style="@style/HelpSectionHeader"
                    android:layout_marginTop="32dp"
                    android:text="@string/questions_and_answers" />

                <!-- Q1 -->
                <TextView
                    style="@style/HelpQuestion"
                    android:text="@string/is_my_medical_information_stored_securely" />

                <TextView
                    style="@style/HelpAnswer"
                    android:text="@string/your_medical_information_is_encrypted_within_our_database_and_cannot_be_accessed_by_any_account_other_than_your_to_ensure_your_medical_information_remains_private" />

                <!-- Q2 -->
                <TextView
                    style="@style/HelpQuestion"
                    android:layout_marginTop="24dp"
                    android:text="@string/how_does_your_app_perform_drug_interaction_risk_analysis" />

                <TextView
                    style="@style/HelpAnswer"
                    android:text="@string/our_app_uses_a_machine_learning_model_trained_on_drug_interaction_data_in_order_to_predict_the_risk_level_of_a_drug_interaction_to_a_high_degree_of_certainty" />

                <!-- Q3 -->
                <TextView
                    style="@style/HelpQuestion"
                    android:layout_marginTop="24dp"
                    android:text="@string/how_accurate_is_your_risk_analysis" />

                <TextView
                    style="@style/HelpAnswer"
                    android:text="@string/our_machine_learning_model_has_an_accuracy_greater_than_75_of_course_always_make_sure_to_consult_a_doctor_before_taking_a_new_potentially_harmful_medication" />

                <!-- Contact -->
                <TextView
                    android:id="@+id/textView30"
                    style="@style/HelpSectionHeader"
                    android:layout_marginTop="32dp"
                    android:text="@string/for_any_other_questions_or_issues_reach_out_to_us_at" />

                <TextView
                    android:id="@+id/textView31"
                    style="@style/HelpBody"
                    android:textAlignment="center"
                    android:text="@string/aidruginteractionchecker_gmail_com" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>