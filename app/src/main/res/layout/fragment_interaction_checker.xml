<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".InteractionCheckerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="24dp">

        <!-- Page title -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/archivo_black"
            android:text="@string/interaction_checker2"
            android:textAlignment="center"
            android:textColor="#222222"
            android:textSize="34sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Section header: comparison drug -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/comparison_drug"
            android:textSize="20sp"
            android:textColor="#222222"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Drug input with barcode button on the end -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/comparisonEntryLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="@color/outline_grey"
            android:hint="@string/enter_comparison_drug_here">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/comparisonEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/input_text_color"
                app:hintTextColor="@color/input_hint_color" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Barcode scan button aligned to the right of input -->
        <ImageButton
            android:id="@+id/barcodeBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#F5F5F5"
            android:src="@drawable/barcode_scanner"
            android:contentDescription="@string/barcode_scanner"
            app:tint="#0B0202"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/comparisonEntryLayout"
            android:layout_marginTop="4dp"/>

        <!-- Submit button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/compareBtn"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:text="@string/submit"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="12dp"
            app:rippleColor="@color/purple_700"
            app:layout_constraintTop_toBottomOf="@id/comparisonEntryLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Section header: results -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/interaction_results1"
            android:textSize="20sp"
            android:textColor="#222222"
            app:layout_constraintTop_toBottomOf="@id/compareBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Results column headers -->
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:text="@string/health_factor"
                android:textSize="16sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/risk_level"
                android:textSize="16sp"
                android:textColor="#555555" />
        </LinearLayout>

        <!-- RecyclerView for results -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resultsRecycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/comparison_results2"
            app:layout_constraintTop_toBottomOf="@id/LinearLayout1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>